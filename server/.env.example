# ============================================
# LOCAL DEVELOPMENT (.env)
# ============================================

# Database
DATABASE_URL=postgresql://username:password@host:port/database

# Authentication
BETTER_AUTH_SECRET=your-super-secret-random-string-min-32-chars
BETTER_AUTH_URL=http://localhost:3000

# AI API (OpenRouter)
AI_API_KEY=sk-or-v1-your-api-key

# Trusted Origins (comma-separated)
TRUSTED_ORIGINS=http://localhost:5173,http://localhost:3000

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Environment
NODE_ENV=development

# ============================================
# VERCEL DEPLOYMENT (Add these in Vercel Dashboard)
# ============================================

# DATABASE_URL=postgresql://user:password@host/db (from Vercel Postgres or Neon)
# BETTER_AUTH_SECRET=your-super-secret-random-string-min-32-chars
# BETTER_AUTH_URL=https://your-app.vercel.app
# AI_API_KEY=sk-or-v1-your-api-key
# TRUSTED_ORIGINS=https://your-app.vercel.app
# STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key (use sk_live for production)
# STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret (from Stripe Dashboard)
# NODE_ENV=production
